<table class="table table-striped">
  <thead>
    <tr>
      <th>Body</th>
      <th>Recipient</th>
    </tr>
  </thead>
  <tbody>
  	<% @messages.each do |message| %>
    <tr>
      <td><%= link_to message.body, message %></td>
	  <td><%= link_to message.user.email, message.user %></td>
    </tr>
    <% end %>
  </tbody>
</table>

